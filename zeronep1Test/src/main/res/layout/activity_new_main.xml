<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <ImageView
            android:id="@+id/ic_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_left"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/refresh_btn"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_refresh_black"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点餐"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/selected_waiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_change_waiter_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <LinearLayout
            android:id="@+id/llIndex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="点餐"
                android:textColor="#838383"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivIndex"
                android:layout_width="46dp"
                android:layout_height="1dp"
                android:background="@drawable/img_btn_selected"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单"
                android:textColor="#838383"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivtwo"
                android:layout_width="46dp"
                android:layout_height="1dp"
                android:background="@drawable/img_btn_selected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llthree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="选择餐桌"
                android:textColor="#838383"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivthree"
                android:layout_width="46dp"
                android:layout_height="2dp"
                android:background="@drawable/img_btn_selected"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:orientation="vertical" >
    </LinearLayout>

    <include layout="@layout/shop_cart" />

</LinearLayout>
